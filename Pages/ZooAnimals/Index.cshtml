@page
@model zoo.Pages_ZooAnimals.IndexModel

@{
    ViewData["Title"] = "Animals";
}

<div>
	<h3>Search</h3>
	<form>
		<label for="name">Name : </label>
        <input type="text" asp-for="Query" />

        <label for="species">Species : </label>
		<input type="text" asp-for="ASpecies"/>	

         <label for="gender">Gender : </label>
		<input type="text" asp-for="AGender"/>	

         <label for="location">Location : </label>
		<input type="text" asp-for="ALocation"/>		
		<input type="submit" value="Search" />
	</form>
</div>

<p>
    <a asp-page="Create">Create New Animal</a>
</p>
<table class="table">
    <thead>
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].ImageName)
            </th>
             <th>               
                @Html.DisplayNameFor(model => model.AnimalModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Gender)
            </th>
           <th>
            
           @if (Model.SortOrder == "Location_desc")
                {
                    <a href="?sortbylocation=Location_asc">Location </a>
                }
                else if (Model.SortOrder == "Location_asc")
                {
                    <a href="?sortbylocation=Location_desc">Location</a>
                }
                else
                {
                    <a href="?sortbylocation=Location_asc">Location</a>
                }
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AnimalModel) {
        <tr>
           <td>
             <img src="@item.ImageName"  style="max-width: 150px; max-height: 150px;" />
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AnimalModelId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AnimalModelId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AnimalModelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
