@page
@model zoo.Pages_ZooAnimals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].ImageName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalModel[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AnimalModel) {
        <tr>
           <td>
             <img src="@item.ImageName"  style="max-width: 150px; max-height: 150px;" />
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AnimalModelId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AnimalModelId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AnimalModelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
